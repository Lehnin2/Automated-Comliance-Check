{
  "metadata": {
    "title": "Mapping between Rules and Disclaimers",
    "version": "1.1",
    "last_updated": "2025-11-05",
    "purpose": "Link compliance rules to their required content",
    "description": "Ce fichier établit les correspondances entre les règles de conformité (rules_database.json) et les disclaimers requis (disclaimers-glossary.json)",
    "synchronized_with": {
      "rules_database.json": "20231122",
      "disclaimers-glossary.json": "20231122",
      "registration-countries.json": "20251008",
      "validation-schema.json": "1.0"
    },
    "change_log": [
      {
        "date": "2025-11-05",
        "version": "1.1",
        "changes": "Added integration with registration-countries.json for rule 1.9"
      },
      {
        "date": "2023-11-22",
        "version": "1.0",
        "changes": "Initial version with core mappings"
      }
    ]
  },

  "mappings": [
    {
      "rule_id": "1.1",
      "rule_description": "Si document retail : inclure les disclaimers retail",
      "source_file": "rules_database.json",
      "required_disclaimers": {
        "by_language": {
          "en": ["EN_PRES_RET_SAS", "EN_PRES_RET_GMBH", "EN_PRES_RET_LUX"],
          "fr": ["FR_PRES_RET_SAS"],
          "de": ["DE_PRES_RET_SAS"]
        },
        "by_management_company": {
          "OBAM_SAS": ["*_RET_SAS"],
          "OBAM_GmbH": ["*_RET_GMBH"],
          "OBAM_Lux": ["*_RET_LUX"]
        }
      },
      "applicability": ["retail"],
      "mandatory": true
    },
    {
      "rule_id": "1.2",
      "rule_description": "Si document professionnel : inclure les disclaimers professionnels",
      "source_file": "rules_database.json",
      "required_disclaimers": {
        "by_language": {
          "en": ["EN_PRES_PRO_SAS", "EN_PRES_PRO_GMBH", "EN_PRES_PRO_LUX"],
          "fr": ["FR_PRES_PRO_SAS"],
          "de": ["DE_PRES_PRO_SAS"]
        },
        "by_management_company": {
          "OBAM_SAS": ["*_PRO_SAS"],
          "OBAM_GmbH": ["*_PRO_GMBH"],
          "OBAM_Lux": ["*_PRO_LUX"]
        }
      },
      "applicability": ["professional"],
      "mandatory": true
    },
    {
      "rule_id": "1.4",
      "rule_description": "Pour chaque fonds présenté : mention obligatoire du SRI avec le disclaimer associé sur la même slide",
      "source_file": "rules_database.json",
      "required_disclaimers": {
        "special_disclaimers": ["SRI_related"]
      },
      "placement_rules": {
        "location": "same_slide_as_sri",
        "formatting": "bold_visible"
      },
      "applicability": ["all"],
      "mandatory": true
    },
    {
      "rule_id": "1.6",
      "rule_description": "Les avertissements/disclaimers sur les risques doivent être en gras, utiliser la même police et taille que le texte principal, être visibles",
      "source_file": "rules_database.json",
      "formatting_requirements": {
        "weight": "bold",
        "font_size": "same_as_main_text",
        "font_family": "same_as_main_text",
        "visibility": "visible (not in footnote)"
      },
      "applicability": ["all"],
      "mandatory": true
    },
    {
      "rule_id": "1.12",
      "rule_description": "Les documents commerciaux relatifs à des stratégies sont réservés aux clients professionnels uniquement",
      "source_file": "rules_database.json",
      "required_disclaimers": {
        "by_language": {
          "en": ["EN_STRAT_PRO_SAS", "EN_STRAT_PRO_GMBH", "EN_STRAT_PRO_LUX"],
          "fr": ["FR_STRAT_PRO_SAS"],
          "de": ["DE_STRAT_PRO_SAS"]
        }
      },
      "document_types": ["COMMERCIAL_DOC_STRATEGIES"],
      "applicability": ["professional"],
      "mandatory": true
    },
    {
      "rule_id": "1.9",
      "rule_description": "Les pays de commercialisation indiqués doivent être conformes aux dernières données",
      "source_file": "rules_database.json",
      "data_source": "registration-countries.json",
      "validation_logic": {
        "step_1": "Identifier le fonds dans registration-countries.json#funds[]",
        "step_2": "Vérifier la share_class correspondante",
        "step_3": "Consulter registrations[] pour les pays autorisés",
        "step_4": "Vérifier status: 'R' (Registered) ou 'RX' (Registration with exception)"
      },
      "note": "Ne pas utiliser pour Private Equity",
      "applicability": ["all"],
      "mandatory": true
    },
    {
      "rule_id": "1.14",
      "rule_description": "Pour la Belgique : si présentation à destination de clients non professionnels belges, s'assurer de la validation préalable de la FSMA",
      "source_file": "rules_database.json",
      "country": "BE",
      "country_requirements_ref": "disclaimers-glossary.json#country_specific_requirements.belgium",
      "additional_requirements": {
        "fsma_approval_required": true,
        "retail_restriction": "document_for_distributors_only"
      },
      "applicability": ["belgium_retail"],
      "mandatory": true
    },
    {
      "rule_id": "4.3.disclaimers.past_performance",
      "rule_description": "Disclaimer performances passées obligatoire",
      "source_file": "rules_database.json",
      "required_disclaimer": "PAST_PERF",
      "disclaimer_ref": "disclaimers-glossary.json#special_disclaimers.past_performance",
      "placement_rules": {
        "location": "near_performance_data",
        "formatting": "bold_visible",
        "position": "below_or_next_to_performance"
      },
      "applicability": ["all"],
      "mandatory": true
    },
    {
      "rule_id": "4.3.disclaimers.backtested",
      "rule_description": "Disclaimer pour performances backtestées (France uniquement, professionnels)",
      "source_file": "rules_database.json",
      "required_disclaimer": "BACKTEST_PERF",
      "disclaimer_ref": "disclaimers-glossary.json#special_disclaimers.backtested_performance",
      "applicability": ["professional", "france_only"],
      "mandatory": true,
      "country": "FR"
    },
    {
      "rule_id": "4.3.disclaimers.future_simulation",
      "rule_description": "Disclaimer pour simulations de performances futures",
      "source_file": "rules_database.json",
      "required_disclaimer": "FUTURE_SIM",
      "disclaimer_ref": "disclaimers-glossary.json#special_disclaimers.future_simulations",
      "applicability": ["all"],
      "mandatory": true,
      "condition": "when_displaying_simulations"
    },
    {
      "rule_id": "4.3.disclaimers.multiple_scenarios",
      "rule_description": "Disclaimer pour affichage de plusieurs scénarios",
      "source_file": "rules_database.json",
      "required_disclaimer": "MULTI_SCEN",
      "disclaimer_ref": "disclaimers-glossary.json#special_disclaimers.multiple_scenarios",
      "applicability": ["all"],
      "mandatory": true,
      "condition": "when_multiple_scenarios_displayed"
    },
    {
      "rule_id": "4.3.disclaimers.past_simulation",
      "rule_description": "Disclaimer pour simulations de performances passées (nouvelle part)",
      "source_file": "rules_database.json",
      "required_disclaimer": "past_simulation_disclaimer",
      "applicability": ["all"],
      "mandatory": true,
      "condition": "when_simulating_new_share_class"
    }
  ],

  "document_type_mapping": {
    "OBAM_PRESENTATION": {
      "description": "Présentations commerciales de fonds (~30 pages)",
      "required_sections": ["cover_page", "disclaimer_page", "content_pages", "closing_page"],
      "rules_sections": ["1", "2", "3", "4", "5"],
      "client_types": ["retail", "professional"]
    },
    "COMMERCIAL_DOC_FUNDS": {
      "description": "Documentation commerciale pour fonds",
      "required_sections": ["disclaimers", "performance_disclaimers"],
      "rules_sections": ["1", "4"],
      "client_types": ["retail", "professional"]
    },
    "COMMERCIAL_DOC_STRATEGIES": {
      "description": "Documentation commerciale pour stratégies",
      "required_sections": ["professional_disclaimer", "performance_disclaimers"],
      "rules_sections": ["1", "4"],
      "client_types": ["professional"],
      "restriction": "professional_only"
    },
    "COMMERCIAL_DOC_RAIF": {
      "description": "Documentation pour fonds RAIF (Luxembourg)",
      "required_sections": ["well_informed_disclaimer"],
      "rules_sections": ["1"],
      "client_types": ["well_informed"],
      "restriction": "well_informed_investors"
    },
    "FUNDS_REPORTING": {
      "description": "Reportings périodiques de fonds",
      "required_sections": ["performance_disclaimers"],
      "rules_sections": ["4.3"],
      "client_types": ["retail", "professional"]
    },
    "MMF_WEEKLY_REPORTING": {
      "description": "Reporting hebdomadaire réglementaire pour fonds monétaires",
      "required_disclaimers": ["MMF_WEEKLY"],
      "regulation": "EU_2017_1131_Article_36_2",
      "client_types": ["all"]
    }
  },

  "country_specific_mapping": {
    "BE": {
      "country_name": "Belgium",
      "specific_rules": ["1.14"],
      "requirements_ref": "disclaimers-glossary.json#country_specific_requirements.belgium",
      "retail_restriction": true,
      "fsma_approval_required": true,
      "mediation_service": "http://mediationconsommateur.be"
    },
    "DE": {
      "country_name": "Germany",
      "specific_rules": ["4.3.funds_rules.country_specific.germany"],
      "requirements_ref": "disclaimers-glossary.json#country_specific_requirements.germany",
      "performance_rules": "extended",
      "mifid_article": "Article 44 MiFID II"
    },
    "FR": {
      "country_name": "France",
      "specific_rules": ["4.3.disclaimers.backtested"],
      "backtested_performance": "allowed_professional_only"
    },
    "CH": {
      "country_name": "Switzerland",
      "requirements_ref": "disclaimers-glossary.json#country_specific_requirements.switzerland",
      "representative_required": true,
      "fund_types": ["french_funds", "lux_funds", "metropole_funds", "german_lux_funds"]
    }
  },

  "client_type_mapping": {
    "retail": {
      "code_in_glossary": "NON_PROFESSIONAL",
      "code_in_rules": "retail",
      "applicable_disclaimers_pattern": "*_RET_*",
      "mandatory_rules": ["1.1", "1.5", "1.11"],
      "restrictions": {
        "strategy_documents": false,
        "track_record": false,
        "gross_performance": false,
        "backtested_performance": false
      }
    },
    "professional": {
      "code_in_glossary": "PROFESSIONAL",
      "code_in_rules": "professional",
      "applicable_disclaimers_pattern": "*_PRO_*",
      "mandatory_rules": ["1.2", "1.12"],
      "restrictions": {
        "strategy_documents": true,
        "track_record": true,
        "gross_performance": true,
        "backtested_performance": true
      }
    },
    "well_informed": {
      "code_in_glossary": "WELL_INFORMED",
      "code_in_rules": "well_informed_investors",
      "applicable_disclaimers_pattern": "*_RAIF_*",
      "mandatory_rules": ["1.2"],
      "applicable_to": ["RAIF"],
      "restrictions": {
        "strategy_documents": true,
        "track_record": true
      }
    }
  },

  "validation_workflow": {
    "step_1": {
      "action": "identify_document_type",
      "source": "rules_database.json#document_types",
      "output": "document_type_code"
    },
    "step_2": {
      "action": "identify_client_type",
      "source": "rules_database.json#client_type_differentiation",
      "output": "client_type_code"
    },
    "step_3": {
      "action": "identify_management_company",
      "source": "disclaimers-glossary.json#management_companies",
      "output": "management_company_code"
    },
    "step_4": {
      "action": "identify_language",
      "source": "disclaimers-glossary.json#metadata.languages",
      "output": "language_code"
    },
    "step_5": {
      "action": "select_main_disclaimer",
      "logic": "disclaimers-glossary.json#disclaimers[language][document_type_client_type_company]",
      "example": "disclaimers.english.obam_presentation_retail_sas"
    },
    "step_6": {
      "action": "apply_mandatory_rules",
      "source": "rules_database.json#sections[].rules[mandatory=true]",
      "check_against": "compliance-mapping.json#mappings"
    },
    "step_7": {
      "action": "apply_conditional_rules",
      "source": "rules_database.json#sections[].rules[conditional]",
      "check_conditions": true
    },
    "step_8": {
      "action": "apply_country_specific_rules",
      "source": "rules_database.json#country_specific_rules",
      "reference": "compliance-mapping.json#country_specific_mapping"
    },
    "step_9": {
      "action": "validate_formatting",
      "source": "rules_database.json#formatting_requirements",
      "check": ["bold", "font_size", "visibility"]
    },
    "step_10": {
      "action": "final_checklist",
      "source": "rules_database.json#validation_checklist",
      "output": "compliance_report"
    }
  }
}
